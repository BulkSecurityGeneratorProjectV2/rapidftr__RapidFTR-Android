<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@drawable/bg_android"
                  android:layout_marginTop="0dp">

        <ImageView android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:contentDescription="@string/RapidFTRLogo"
                   android:padding="3dp" android:src="@drawable/logo"
                   android:background="@color/logoBackground"
                   android:scaleType="fitCenter">
        </ImageView>
        <TextView android:text="@string/info_text" android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                />
        <TextView android:text="عربي .1" android:layout_width="fill_parent"
                  android:layout_height="wrap_content" android:gravity="left"
                />
        <TextView android:text="2. 中文" android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                />
        <TextView android:text="3. English" android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                />
        <TextView android:text="4. Français" android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                />
        <TextView android:text="5. Русский" android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                />
        <TextView android:text="6. Español" android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                />
    </LinearLayout>
</ScrollView>